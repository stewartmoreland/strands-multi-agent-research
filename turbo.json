{
  "$schema": "https://turborepo.dev/schema.json",
  "globalPassThroughEnv": [
    "AWS_PROFILE",
    "AWS_REGION",
    "AWS_DEFAULT_REGION",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_SESSION_TOKEN",
    "AWS_SHARED_CREDENTIALS_FILE",
    "AWS_CONFIG_FILE",
    "HOME"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "build/**", "cdk.out/**"],
      "env": ["BEDROCK_MODEL_ID", "AWS_REGION"]
    },
    "lint": {
      "outputs": []
    },
  "test": {
    "dependsOn": ["^build"],
    "outputs": [],
    "inputs": ["$TURBO_DEFAULT$", "src/**", "lib/**", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"]
  },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
